<h1>Listing stars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Security</th>
    <th>Gate count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stars.each do |star| %>
  <tr>
    <td><%= star.name %></td>
    <td><%= star.security %></td>
    <td><%= star.gate_count %></td>
    <td><%= link_to 'Show', star %></td>
    <td><%= link_to 'Edit', edit_star_path(star) %></td>
    <td><%= link_to 'Destroy', star, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

