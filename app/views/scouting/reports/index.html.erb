<h1>Listing Scouting Reports</h1>

<table class="table table-condensed table-striped">
  <tr>
    <th>Submitter</th>
    <th>Star</th>
    <th>Planets</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scouting_reports.each do |scouting_report| %>
  <tr>
    <td><%= scouting_report.user.pilot_name %></td>
    <td><%= scouting_report.star.name %></td>
    <td>
      <% for planet in scouting_report.planets %>
        <%= planet.name %><br />
      <% end %>
    </td>
    <td><%= link_to 'Show', scouting_report %></td>
    <td><%= link_to 'Edit', edit_scouting_report_path(scouting_report) %></td>
    <td><%= link_to 'Destroy', scouting_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

