<h1>Draft Reports</h1>

<table class="table table-condensed table-striped">
  <tr>
    <th>Submitter</th>
    <th>Solar System</th>
    <th></th>
    <th></th>
  </tr>

<% @draft_reports.each do |report| %>
  <tr>
    <td><%= report.user.pilot_name %></td>
    <td><b><%= report.solar_system_name %></b> (ID:<%= report.solar_system_id %>)</td>
    <td><%= link_to 'Edit', draft_scouting_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

