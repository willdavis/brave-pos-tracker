<h1>Listing Control Towers</h1>

<table class="table">
  <tr>
    <th>Owner Corp</th>
    <th>Owner Alliance</th>
    <th>Moon</th>
    <th>Control tower type</th>
    <th>Solar system</th>
    <th>Constellation</th>
    <th>Region</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scouting_control_towers.each do |control_tower| %>
  <tr>
    <td><%= control_tower.corporation.name %></td>
    <td><%= control_tower.corporation.alliance_name %></td>
    <td><%= control_tower.moon_name %></td>
    <td><%= control_tower.control_tower_type_name %></td>
    <td><%= control_tower.solar_system_id %></td>
    <td><%= control_tower.constellation_id %></td>
    <td><%= control_tower.region_id %></td>
    <td><%= link_to 'Show', control_tower %></td>
    <td><%= link_to 'Edit', edit_scouting_control_tower_path(control_tower) %></td>
    <td><%= link_to 'Destroy', control_tower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

