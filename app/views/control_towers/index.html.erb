<h1>Listing Control Towers</h1>

<table class="table table-striped table-hover table-condensed">
  <tr>
    <th></th>
    <th>Corporation</th>
    <th>Tower Type</th>
    <th>Moon</th>
    <th>Solar system</th>
  </tr>

<% @control_towers.each do |control_tower| %>
  <tr>
    <td><%= link_to 'View', control_tower %></td>
    <td><%= link_to "#{control_tower.corporation.name}", corporation_path(control_tower.corporation) %></td>
    <td><%= control_tower.type_id %></td>
    <td><%= control_tower.moon_name %></td>
    <td><%= control_tower.solar_system_id %></td>
  </tr>
<% end %>
</table>

